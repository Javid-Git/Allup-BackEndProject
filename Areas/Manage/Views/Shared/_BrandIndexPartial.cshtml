@model PageNatedList<Brand>
@{
    int no = (Model.Page-1)* Model.ItemCount;
}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Status</th>
            <th>Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Brand brand in Model)
        {
            no++;
        <tr>
            <td>@no</td>
            <td>@brand.Name</td>
            <td style="color:@(brand.IsDeleted ? "red":"green")">@(brand.IsDeleted ? "Deleted":"Active")</td>
            <td>
                <a asp-area="manage" asp-controller="brand" asp-action="update" asp-route-id="@brand.Id" class="btn btn-warning">Update</a>
                @if (brand.IsDeleted)
                {
                    <a asp-area="manage" asp-controller="brand" asp-action="restore" asp-route-id="@brand.Id" asp-route-status="@ViewBag.Status" class="btn btn-info restoreBtn">Restore</a>

                }
                else
                {
                    <a asp-area="manage" asp-controller="brand" asp-action="delete" asp-route-id="@brand.Id" asp-route-status="@ViewBag.Status" class="btn btn-danger deleteBtn">Delete</a>

                }

            </td>
        </tr>

            
        }
    </tbody>
</table>
