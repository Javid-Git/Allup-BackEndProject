@model List<BasketVM>


<ul class="cart-items">
    @foreach (BasketVM BasketVM in Model)
    {
        <li>
            <div class="single-cart-item d-flex">
                <div class="cart-item-thumb">
                    <a href="single-product.html"><img src="~/assets/images/product/@BasketVM.Image" alt="product"></a>
                    <span class="product-quantity">@(BasketVM.SelectCount)x</span>
                </div>
                <div class="cart-item-content media-body">
                    <h5 class="product-name"><a href="single-product.html">@BasketVM.Name</a></h5>
                    <span class="product-price">€@(BasketVM.Price)</span>
                    <span class="product-color"><strong>Color:</strong> White</span>
                    <a asp-controller="product" asp-action="DeleteFromBasket" asp-route-id="@BasketVM.ProdId" class="product-close deletefrombasket"><i class="fal fa-times"></i></a>
                </div>
            </div>
        </li>
    }
</ul>
<div class="price_content">
    <div class="cart-subtotals">
        <div class="products price_inline">
            <span class="label">Subtotal</span>
            <span class="value">€@Model.Sum(b=>b.Price * b.SelectCount)</span>
        </div>
        <div class="tax price_inline">
            <span class="label">Taxes</span>
            <span class="value">€@Model.Sum(b=>b.ExTax * b.SelectCount)</span>
        </div>
    </div>
    <div class="cart-total price_inline">
        <span class="label">Total</span>
        <span class="value">€@(Model.Sum(b => b.Price * b.SelectCount) + Model.Sum(b => b.ExTax * b.SelectCount))</span>
    </div>
</div> <!-- price content -->
<div class="checkout text-center">
    <a href="checkout.html" class="main-btn">Checkout</a>
</div>
